
call themis#option('recursive', 1)

let s:root = getcwd()

function! TddTestBeforeEach() abort
    execute 'cd' s:root

    call tdd#reset()
    call tdd#config#clear()
    call tdd#command#reset()

    call tdd#config#option('log', 'themis')
    call themis#log('')
endfunction

function! TddTestAfterEach() abort
    silent! %bwipeout!
    call tdd#config#clear()
endfunction
